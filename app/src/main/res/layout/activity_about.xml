<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AboutActivity">


        <ImageView
            android:id="@+id/imageViewAppIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAbout" />

        <TextView
            android:id="@+id/textViewAppVersionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Version :"
            android:textIsSelectable="true"
            app:layout_constraintStart_toEndOf="@+id/imageViewAppIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppNameLabel" />

        <TextView
            android:id="@+id/textViewAppVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="- - -"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAppVersionLabel"
            app:layout_constraintStart_toEndOf="@+id/textViewAppVersionLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewAppVersionLabel" />

        <TextView
            android:id="@+id/textViewAboutDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp"
            android:autoLink="web"
            android:text="@string/about_text"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAuthorNameLabel" />

        <TextView
            android:id="@+id/textViewAppNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Name :"
            android:textIsSelectable="true"
            app:layout_constraintStart_toEndOf="@+id/imageViewAppIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewAppIcon" />

        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="- - -"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAppNameLabel"
            app:layout_constraintStart_toEndOf="@+id/textViewAppNameLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewAppNameLabel" />

        <TextView
            android:id="@+id/textViewAuthorNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Author :"
            android:textIsSelectable="true"
            app:layout_constraintStart_toEndOf="@+id/imageViewAppIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppVersionLabel" />

        <TextView
            android:id="@+id/textViewAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="- - -"
            android:textIsSelectable="true"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAuthorNameLabel"
            app:layout_constraintStart_toEndOf="@+id/textViewAuthorNameLabel"
            app:layout_constraintTop_toTopOf="@+id/textViewAuthorNameLabel" />

        <TextView
            android:id="@+id/textViewAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_title_text"
            android:textIsSelectable="true"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>





